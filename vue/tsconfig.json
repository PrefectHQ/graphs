{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "vite/client"
    ],
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.d.ts",
    "./*.ts",
    "./*.d.ts",
    "./App.vue",
    "./postcss.config.js",
  ]
}
